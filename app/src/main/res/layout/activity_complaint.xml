<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.complaint.complaintActivity">

    <RelativeLayout
        android:id="@+id/pathselect_title"
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:background="@color/colo_yellow"
        android:gravity="center_vertical"
        android:padding="0.0px" >

        <TextView
            android:id="@+id/main_title_name"
            style="@style/A1_Font"
            android:text="投诉"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="96.0dip"
            android:paddingRight="96.0dip"
            android:singleLine="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/complaint_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="96.0dip"
        android:paddingRight="96.0dip"
        android:singleLine="true"
        android:text="投诉原因类别"
        android:textSize="16dp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_x="3px"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radiobutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未按时交付" />

        <RadioButton
            android:id="@+id/radiobutton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="物品损伤" />

        <RadioButton
            android:id="@+id/radiobutton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未支付酬劳" />

        <RadioButton
            android:id="@+id/radiobutton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他" />

    </RadioGroup>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_weight="1"
        android:background="@drawable/shape_bg"
        android:fillViewport="true" >

        <EditText
            android:id="@+id/feed_back_edit"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="@null"
            android:gravity="left|top"
            android:hint="说些什么吧（投诉原因）..."
            android:inputType="textMultiLine"
            android:paddingBottom="4.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="4.0dip"
            android:textSize="16.0sp" />
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/shape_line" />

    <Button
        android:id="@+id/feed_back_btn"
        style="@style/RedGreen"
        android:layout_width="wrap_content"
        android:layout_height="35.0dip"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="5.0dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5.0dip"
        android:background="@color/colo_blue"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:text="提  交" />

</LinearLayout>